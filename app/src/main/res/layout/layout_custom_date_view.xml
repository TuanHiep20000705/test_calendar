<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewStrip"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@color/range_bg_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dayOfMonthText"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@id/viewStrip"
        app:layout_constraintEnd_toEndOf="@id/viewStrip"
        app:layout_constraintStart_toStartOf="@id/viewStrip"
        app:layout_constraintTop_toTopOf="@id/viewStrip" />
</androidx.constraintlayout.widget.ConstraintLayout>